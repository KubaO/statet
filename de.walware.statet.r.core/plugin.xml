<plugin>
   <extension-point id="de.walware.statet.r.workingContexts" name="R Working Contexts" schema="schema/de.walware.statet.r.workingContexts.exsd"/>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="de.walware.statet.r.internal.core.RCorePreferenceInitializer"/>
   </extension>
   <extension
         id="de.walware.statet.r.RNature"
         name="R Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="de.walware.statet.r.core.RProject"/>
      </runtime>
      <requires-nature id="de.walware.statet.base.StatetNature"/>
      <builder id="de.walware.statet.r.builders.RSupport"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="R"
            id="de.walware.statet.r.contentTypes.R"
            name="%contentTypes.R.name"
            priority="normal">
         <property name="bom"/>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="Rd"
            id="de.walware.statet.r.contentTypes.Rd"
            name="%contentTypes.Rd.name"
            priority="normal">
         <property name="bom"/>
      </content-type>
   </extension>
   <extension
         id="de.walware.statet.r.markers.Tasks"
         name="%markers.Task.name"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.taskmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="de.walware.statet.r.core.RInternalBuilder"
         name="Compatibility Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="false">
         <run class="de.walware.statet.r.internal.core.RCompatibilityBuilder"/>
      </builder>
   </extension>
   <extension
         id="de.walware.statet.r.builders.RSupport"
         name="%builders.RInternalBuilder.name"
         point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="de.walware.statet.r.internal.core.RSupportBuilder"/>
      </builder>
   </extension>
   <extension
         point="org.eclipse.team.core.fileTypes">
      <fileTypes
            extension="R"
            type="text"/>
      <fileTypes
            extension="Rd"
            type="text"/>
   </extension>

</plugin>
