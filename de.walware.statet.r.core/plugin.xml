<plugin>
   <extension
         id="RNature"
         name="R Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="de.walware.statet.r.core.RProject"/>
      </runtime>
      <requires-nature id="de.walware.statet.base.StatetNature"/>
      <builder id="de.walware.statet.r.core.RInternalBuilder"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="R"
            id="RContent"
            name="%contentTypes.R.name"
            priority="normal">
         <property name="bom"/>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="Rd"
            id="RdContent"
            name="%contentTypes.Rd.name"
            priority="normal">
         <property name="bom"/>
      </content-type>
   </extension>
   <extension
         id="TaskMarker"
         name="%markers.Task.name"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.taskmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="RInternalBuilder"
         name="%builders.RInternalBuilder.name"
         point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="de.walware.statet.r.core.internal.RInternalBuilder"/>
      </builder>
   </extension>
   <extension
         point="org.eclipse.team.core.fileTypes">
      <fileTypes
            extension="R"
            type="text"/>
      <fileTypes
            extension="Rd"
            type="text"/>
   </extension>

</plugin>
