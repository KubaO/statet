<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="de.walware.statet.r.internal.core.RCorePreferenceInitializer"/>
   </extension>
   <extension
         id="de.walware.statet.r.RNature"
         name="R Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="de.walware.statet.r.core.RProject"/>
      </runtime>
      <requires-nature id="de.walware.statet.base.StatetNature"/>
      <builder id="de.walware.statet.r.builders.RSupport"/>
   </extension>
   <extension
         id="de.walware.statet.r.RPackageNature"
         name="R-Package Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.walware.statet.r.core.RPackageProject">
         </run>
      </runtime>
      <requires-nature
            id="de.walware.statet.r.RNature">
      </requires-nature>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="R"
            id="de.walware.statet.r.contentTypes.R"
            name="%contentTypes.R.name"
            priority="normal">
         <property name="bom"/>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            describer="de.walware.statet.r.core.rdoc.RdTextContentDescriber"
            file-extensions="Rd"
            id="de.walware.statet.r.contentTypes.Rd"
            name="%contentTypes.Rd.name"
            priority="normal">
         <property name="org.eclipse.core.runtime.charset" />
      </content-type>
      <content-type
            file-extensions="RData"
            id="de.walware.statet.r.contentTypes.RData"
            name="%contentTypes.RData.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         id="de.walware.statet.r.markers.Tasks"
         name="%markers.Task.name"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.taskmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="de.walware.statet.r.core.RInternalBuilder"
         name="Compatibility Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="false">
         <run class="de.walware.statet.r.internal.core.RCompatibilityBuilder"/>
      </builder>
   </extension>
   <extension
         id="de.walware.statet.r.builders.RSupport"
         name="%builders.RInternalBuilder.name"
         point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="de.walware.statet.r.internal.core.RSupportBuilder"/>
      </builder>
   </extension>
   <extension
         point="org.eclipse.team.core.fileTypes">
      <fileTypes
            extension="R"
            type="text"/>
      <fileTypes
            extension="Rd"
            type="text"/>
      <fileTypes
            extension="RData"
            type="binary">
      </fileTypes>
   </extension>

   <extension
         point="de.walware.eclipsecommons.ltk.workingContexts">
      <unitType modelTypeId="r"
            contextKey="persistence.default"
            unitFactory="de.walware.statet.r.internal.core.RSourceUnitFactory">
      </unitType>
   </extension>
   <extension
         point="de.walware.eclipsecommons.ltk.contentTypeActivation">
      <modelType id="r"
            contentTypeId="de.walware.statet.r.contentTypes.R">
      </modelType>
   </extension>

</plugin>
