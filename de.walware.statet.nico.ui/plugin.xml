<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="de.walware.statet.nico.internal.ui.preferences.NicoUIPreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="de.walware.statet.base.views.StatetCategory"
            class="de.walware.statet.nico.ui.views.HistoryView"
            icon="icons/view_16/history.png"
            id="de.walware.statet.nico.views.HistoryView"
            name="%views_History_name"/>
      <view
           allowMultiple="true"
           category="de.walware.statet.base.views.StatetCategory"
           class="de.walware.statet.nico.ui.views.QueueView"
           icon="icons/view_16/queue.png"
           id="de.walware.statet.nico.views.QueueView"
           name="%views_Queue_name"/>

   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="de.walware.statet.nico.core.runtime.ToolController$ConsoleCommandRunnable"
            class="de.walware.statet.nico.internal.ui.CommandRunnableAdapterFactory">
         <adapter type="de.walware.statet.nico.ui.IToolRunnableAdapter"/>
      </factory>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.walware.statet.nico.commands.Cancel"
            name="%commands_Cancel_name"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.walware.statet.nico.commands.Cancel"
            contextId="org.eclipse.debug.ui.console"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="BREAK"/>
      <key
            commandId="de.walware.statet.nico.commands.Cancel"
            contextId="org.eclipse.debug.ui.console"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+BREAK"/>
   </extension>

</plugin>
